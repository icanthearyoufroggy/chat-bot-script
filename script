wait()
local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local hrp = Players.LocalPlayer.Character.HumanoidRootPart

-- languages en , es , tr , vi [and more] --

local language = "en"

local censor = "True" -- censoring?

local function noti(title,desc,icon,dur)
	game.StarterGui:SetCore("SendNotification",  {
		Title = title;
		Text = desc;
		Icon = icon;
		Duration = dur;
	})
end

local function changebooth()
	local ohString1 = "Update"
	local ohTable2 = {
		["DescriptionText"] = "goofy chat bot talk to it (I AM NOT CONTROLLING THIS IF IT SWEARS OR SAYS SOMETHING BAD DONT GET OFFENDED MY GOD BRU)",
		["ImageId"] = 2414705783
	}

	game:GetService("ReplicatedStorage").CustomiseBooth:FireServer(ohString1, ohTable2)
end

changebooth()

local function msg(message, play)
	local text = message
	local respond = game:HttpGet("https://api.simsimi.net/v2/?text="..text.."&lc="..language.."&cf="..censor)
	local idk = HttpService:JSONDecode(respond)
	local uncensoredresponse = game:HttpGet("https://api.simsimi.net/v2/?text="..text.."&lc="..language.."&cf=".."False")
	local idk2 = HttpService:JSONDecode(uncensoredresponse)
	print(idk2.success)
	noti("uncensored bot chat",idk2.success,"rbxassetid://2414705783",5)

	wait()

	game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(play.." "..idk.success, "All")
end


Players.PlayerChatted:Connect(function(type, plr, msgg)
	if plr == Players.LocalPlayer then
		print("don't respond to myself pwease")
	else
		for _,plrs in pairs(game.Players:GetPlayers()) do
			if (hrp.Position - plrs.Character.Head.Position).Magnitude <= 10 then
				if plr.DisplayName == plrs.DisplayName then
					wait(0.3)
                    msg(msgg, plr.DisplayName)
				end
			end
		end
	end
end)
